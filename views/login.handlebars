{{!-- login form --}}
<div class="container">

<div class="overall-login">

<div class="login-title">
    <h1>Login Here</h1>
</div>

<form class="login-form">
  <div class="form-group">
    <label for="email-login">Email:</label>
    <input type="email" class="form-control" id="email-login" required/>
  </div>
  <div class="form-group">
    <label for="password-login">Password:</label>
    <input type="password" id="password-login" placeholder="Password" required/>
  </div>
    <button class="login-buttons" type="submit">Login</button>
</form>
</div>

{{!-- signup form --}}
<div class="overall-signup">

<div class="signup-title">
  <h1>Sign Up Here</h1>
</div>

<form class="signup-form">
  <div class="form-group">
    <label for="username-signup">Username:</label>
    <input type="text" id="username-signup" required/>
  </div>
  <div class="form-group">
    <label for="email-signup">Email:</label>
    <input type="email" class="form-control" id="email-signup" required/>
  </div>
  <div class="form-group">
    <label for="password-signup">Password:</label>
    <input type="password" id="password-signup" placeholder="Password" required/>
  </div>
    <button class="login-buttons" type="submit">Signup</button>
</form>
</div>
</div>

{{!-- load the login javascript file  --}}
<script src="/javascript/login.js"></script>