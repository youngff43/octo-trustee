{{!-- shows the single blog information --}}
<article class="blog">
  <div class="title">
    <a href="{{blog.blog_url}}" target="_blank">{{blog.title}}</a>
    <span>({{blog.blog_url}})</span>
  </div>
  <div class="meta">
    Author: {{blog.user.username}} on
    {{blog.created_at}}
    |
    <a href="/blog/{{blog.id}}">{{blog.comments.length}} comment(s)</a>
  </div>
</article>

{{!-- form to allow the user to comment on a blog --}}
{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">Comment on this Blog</button>
  </div>
</form>
{{/if}}

{{!-- shows the comments on that blog --}}
<div class="comments">
  {{#each blog.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}