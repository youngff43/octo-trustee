{{!-- template to generate the dashboard --}}
<section>
  <h2>Create New Blog</h2>
  
  {{!-- form to submit new blog --}}
  <form class="new-blog-form">
    <div>
      <label for="blog-title">Title</label>
      <input type="text" id="blog-title" name="blog-title" />
    </div>
    <div>
      <label for="content">Content</label>
      <input id="content" name="content" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{!-- template to show blogs the user has written --}}
{{#if blogs.length}}
<section>
  <h2>Your Blogs</h2>
  <ol>
    {{#each blogs as |blog|}}
    <li>
      {{> blog-info blog}}
      <a href="/dashboard/edit/{{blog.id}}" class="edit-link">Edit Blog</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

{{!-- script to the javascript file to create a blog --}}
<script src="/javascript/add-blog.js"></script>